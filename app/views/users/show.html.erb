<% provide(:title, @user.username) %>
<div class="user-details">
  <% if signed_in? %>
      <div class="tools">
        <%= link_to 'Edit', edit_user_path(@user) %>
      </div>
  <% end %>

  <h1>
    <%= gravatar_for @user %>
    <%= @user.username %>
  </h1>

  <p>
    <strong>Fullname:</strong>
    <%= @user.fullname %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

</div>

  <div class="itemlist">
    <% if @user.lists.any? %>
      <% @user.lists.each do |list| %>

        <h3 class="name">
<!--
          <%= list.name %> (<%= list.items.count %> items)
-->
          <% if list.url.blank? && current_user && current_user == @user %>
            <form action="/lists/<%= list.id %>/items/findfromurl">
              <span class="input-append" style="float:right; width: 100%; text-align: center">
                <input class="span2" id="appendedInputButton" type="text" name="url" style="width: 80%"/>
                <input type="submit" class="btn btn-primary" type="button" value="Add Item" />
              </span>
            </form>
          <% end %>
        </h3>
<!--
        <div style="clear:both"></div>
          <% if list.url.present? %>
          <span class="url"> - <%= list.url %></span>
        <% end %>
-->
        <% if list.items.any? %>
          <ul class="items">
            <%= render list.items %>
          </ul>
          <div class="after-items"></div>
        <% end %>

      <% end %>
    <% end %>
  </div>

<div style="clear:both;"></div>
