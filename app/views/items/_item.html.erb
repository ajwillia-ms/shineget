<li class="item-row <%= cycle('odd', 'even') -%>">
  <% if item.imgurl.present? %>
      <div class="thumbnail" style="background-image: url('<%= item.imgurl %>');"></div>
  <% end %>

  <span class="buygroup">
    <a href="<%= item.url %>" class="buy btn btn-small btn-primary" target="_blank">Buy</a>
    <% if item.price && item.price > 0.0 %>
    <span class="price">Â£<%= item.price %></span>
    <% end %>
  </span>

  <% if signed_in? %>
  <span class="actions">
    <%= link_to 'Edit', edit_item_path(item) %> |
    <%= link_to 'Remove', item, method: 'delete' %>
  </span>
  <% end %>

  <span class="url"><%= item.title %></span>

  <span class="notes"><%= item.notes %></span>

</li>
